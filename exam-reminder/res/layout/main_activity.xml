<?xml version="1.0" encoding="utf-8"?>

<com.mobidevelop.widget.SplitPaneLayout
        android:id="@+id/split_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:spl="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        spl:orientation="horizontal"
        spl:splitterSize="8dip"
        spl:splitterMovable="false"
        spl:splitterPosition="100%" >
        <!--spl:splitterBackground="@drawable/splitter_bg_h" -->


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <com.viewpagerindicator.TabPageIndicator
                android:id="@+id/indicator"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                />
        <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

    </LinearLayout>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/details_fragment_container"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </LinearLayout>

</com.mobidevelop.widget.SplitPaneLayout>