<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/test_button_container"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <Button
            android:id="@+id/btn_start_main_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Start Main Activity"
            />
    <Button
        android:id="@+id/btn_test_notification"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Test notification"
    />
    <Button
            android:id="@+id/btn_change_crawler"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Change crawler"
            />
    <Button
            android:id="@+id/btn_calendar_test"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Calendar Test"
            />
</LinearLayout>

